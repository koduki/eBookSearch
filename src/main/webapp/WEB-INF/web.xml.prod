<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>resource</servlet-name>
		<servlet-class>cn.orz.pascal.ebooksearch.web.ResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>scalate</servlet-name>
		<servlet-class>cn.orz.pascal.ebooksearch.web.WebFront</servlet-class>
		<init-param>
			<param-name>org.scalatra.environment</param-name>
			<param-value>production</param-value>
			         <!-- 
			<param-value>development</param-value>
			          -->
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>cron</servlet-name>
		<servlet-class>cn.orz.pascal.ebooksearch.batch.TaskScheduler</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>resource</servlet-name>
		<url-pattern>/images/*</url-pattern>
		<url-pattern>/css/*</url-pattern>
		<url-pattern>/js/*</url-pattern>
        <url-pattern>/coffee/*</url-pattern>
		<url-pattern>/error/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>scalate</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>403</error-code>
		<location>/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>504</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>505</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>506</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>507</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>508</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>509</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>510</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>511</error-code>
		<location>/error/500.html</location>
	</error-page>
</web-app>
